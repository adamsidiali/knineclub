.join-wrapper
  padding 20px
  display flex
  flex-flow column nowrap
  justify-content flex-start
  background-color #eee
  min-height 100vh
  box-sizing border-box
  position relative

  .join-steps
    position absolute
    top 0
    left 0
    right 0
    background-color #fff

    ul
      list-style none
      padding 0
      margin 0
      display flex
      flex-flow row nowrap
      justify-content flex-start

      li
        flex 1
        margin 0
        text-align center
        padding 20px
        border-right 1px solid #eee
        font-weight 300
        position relative

        &:after
          font-family "Ionicons"
          content "\f3d3"
          line-height 20px
          display block
          text-align center
          position absolute
          top 50%
          transform translateY(-50%)
          right -10px
          background-color #eee
          height 20px
          width 20px
          border-radius 20px
          color #1bb23a !important

        &:last-of-type
          &:after
            display none


        &.active
          background-color #1bb23a
          color #fff

  h2
    font-weight 700
    text-align center
    margin-top 100px
    margin-bottom 20px

    span
      font-family "Lobster"
      color #1bb23a

  p
    width 500px
    max-width 100%
    font-weight 300
    font-size 20px
    margin 0 auto
    text-align center

  .next-button
    position absolute
    bottom 20px
    right 20px
    background-color #1bb23a
    color #fff
    padding 20px 40px
    padding-right 30px
    text-transform uppercase
    font-weight 700
    border-radius 100px

    i
      margin-left 5px

  .add-member-form
    width 600px
    max-width 100%
    margin 0 auto
    padding 0
    margin-top 20px

    input
      width 100%
      display block
      margin 10px 0
      padding 20px
      box-sizing border-box
      font-size 20px
      border-radius 4px
      border 0
      outline none
      background-color #fff
